<%= stylesheet_link_tag    'quiz/sign_up', media: 'all' %>
<div class='height_block'>
</div>
<div class='contents_row'> 
  <h3>　</h3>
  <h3>　QUIZしてアカウント新規登録</h3>
  
  <div class='line'></div>
  
  <h2>　</h2>
  
  <div class='form'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="sign_up">
        
        <div class="field">
        <%= f.label :名前 %> <em>(10文字まで)</em><br />
        <%= f.text_field :name, autofocus: true, maxlength: "10" %>
        </div>
        
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div><br>
      
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div><br>
      
        <div class="field">
          <%= f.label :パスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div><br>
      
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div> 