<%= stylesheet_link_tag    'quiz/sign_in', media: 'all' %>
<div class='height_block'>
</div>
<div class='contents_row'> 
  <h3>　</h3>
  <h3>　QUIZしてログイン</h3>
  
  <div class='line'></div>
  
  <h2>　</h2>
  <div class='form'>       
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="sign_up">
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <br>
            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <br>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :パスワードを記録する %>
              </div>
            <% end -%>
            <br>
            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          </div>  
        <% end %>
  </div>  
   <%= render "devise/shared/links" %>
</div> 
       
